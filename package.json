{
  "name": "happo",
  "version": "6.0.0-beta.0",
  "description": "Visual regression testing and accessibility testing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/happo/happo.git"
  },
  "bugs": "https://github.com/happo/happo/issues",
  "homepage": "https://happo.io",
  "bin": {
    "happo": "dist/cli/index.js"
  },
  "type": "module",
  "main": "./dist/config/index.js",
  "types": "./dist/config/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    },
    "./cypress": {
      "types": "./dist/cypress/index.d.ts",
      "default": "./dist/cypress/index.js"
    },
    "./cypress/task": {
      "types": "./dist/cypress/task.d.ts",
      "default": "./dist/cypress/task.js"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "default": "./dist/playwright/index.js"
    },
    "./static": {
      "types": "./dist/static/index.d.ts",
      "default": "./dist/static/index.js"
    },
    "./storybook/addon": {
      "types": "./dist/storybook/browser/addon.d.ts",
      "default": "./dist/storybook/browser/addon.js"
    },
    "./storybook/decorator": {
      "types": "./dist/storybook/browser/decorator.d.ts",
      "default": "./dist/storybook/browser/decorator.js"
    },
    "./storybook/preset": {
      "types": "./dist/storybook/preset.d.ts",
      "default": "./dist/storybook/preset.js"
    },
    "./storybook/register": {
      "types": "./dist/storybook/browser/register.d.ts",
      "default": "./dist/storybook/browser/register.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "all": "node ./scripts/allchecks.ts",
    "build": "pnpm build:types && pnpm build:dist",
    "build:dist": "./scripts/build.ts",
    "build:types": "pnpm tsc --pretty",
    "build:static": "esbuild src/static/__happo__/index.ts --bundle --format=iife --global-name=happoStatic --outfile=tmp/happo-static/bundle.js --platform=browser --target=esnext && cp src/static/__happo__/iframe.html tmp/happo-static/",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf dist tmp/tsc tmp/happo-static",
    "lint": "eslint .",
    "prepublishOnly": "pnpm clean && pnpm build",
    "storybook:dev": "storybook dev --config-dir src/storybook/__tests__/storybook-app -p ${PORT:-6007}",
    "test": "node --env-file-if-exists=.env.local ./scripts/test.ts",
    "test:cypress": "pnpm build:dist && node --env-file-if-exists=.env.local dist/cli/index.js -c ./happoconfigs/happo.cypress.config.ts e2e -- cypress run -C src/cypress/__cypress__/cypress.config.ts",
    "test:cypress:open": "cypress open -C src/cypress/__cypress__/cypress.config.ts",
    "test:playwright": "pnpm build:dist && node --env-file-if-exists=.env.local dist/cli/index.js -c ./happoconfigs/happo.playwright.config.ts e2e -- playwright test",
    "test:static": "pnpm build:dist && pnpm build:static && node --env-file-if-exists=.env.local dist/cli/index.js -c ./happoconfigs/happo.static.config.ts",
    "test:storybook": "pnpm build:dist && node --env-file-if-exists=.env.local dist/cli/index.js -c ./happoconfigs/happo.storybook.config.ts",
    "tsc": "tsc --build tsconfig.json"
  },
  "browserslist": {
    "node": [
      "node 22"
    ],
    "browser": [
      "last 2 Chrome major versions",
      "last 2 Firefox major versions",
      "last 2 Safari major versions",
      "last 2 Edge major versions"
    ],
    "isomorphic": [
      "node 22",
      "last 2 Chrome major versions",
      "last 2 Firefox major versions",
      "last 2 Safari major versions",
      "last 2 Edge major versions"
    ]
  },
  "prettier": {
    "printWidth": 85,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@reporters/github": "^1.11.0",
    "@storybook/builder-vite": "^9.1.16",
    "@storybook/react-vite": "^9.1.16",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@types/async-retry": "^1.4.9",
    "@types/base64-stream": "^1.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/mime-types": "^3.0.1",
    "@types/multiparty": "^4.2.1",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/serve-handler": "^6.1.4",
    "adm-zip": "^0.5.16",
    "cypress": "^15.5.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-depend": "^1.3.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "jiti": "^2.6.0",
    "jsdom": "^27.0.0",
    "multiparty": "^4.2.3",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "serve-handler": "^6.1.6",
    "storybook": "^9.1.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "async-retry": "^1.3.3",
    "base64-stream": "^1.0.0",
    "empathic": "^2.0.0",
    "image-size": "^2.0.2",
    "jose": "^6.1.0",
    "mime-types": "^3.0.1",
    "p-all": "^5.0.1",
    "srcset": "^5.0.2",
    "supports-color": "^10.2.2"
  },
  "keywords": [
    "accessibility",
    "cypress",
    "playwright",
    "regression",
    "storybook",
    "testing",
    "ui",
    "visual regression",
    "visual"
  ],
  "engines": {
    "node": ">=22"
  }
}
