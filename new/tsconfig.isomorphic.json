{
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist/isomorphic",
    "declarationDir": "./types/isomorphic",
    "tsBuildInfoFile": "./tmp/tsc/tsconfig.isomorphic.tsbuildinfo",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"]
  },

  "include": ["src/isomorphic/**/*.ts"],
  "exclude": ["**/__tests__/**", "**/*.test.ts"]
}
