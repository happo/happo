    "../**/__cypress__/**",
    "../**/__playwright__/**",
    "../**/__tests__/**",
    "../src/**/browser/**",
    "../src/**/cypress/**",
    "../src/**/isomorphic/**",
    "../src/static/**",
    "../src/test-utils/**"
  ]
}
