{
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "outDir": "./types",
    "declarationDir": "./types",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "./tmp/tsc/dist.tsbuildinfo"
  },

  "include": ["src/**/*.ts"],

  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "src/browser/**",
    "src/test-utils/**"
  ]
}
